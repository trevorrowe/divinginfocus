  puts dbconfig.to_yaml
  ActiveRecord::Base.establish_connection(dbconfig)
  ActiveRecord::Base.colorize_logging = true
  log = File.open("log/#{APP_ENV}", 'w')
  ActiveRecord::Base.logger = Logger.new(logFile)
end

